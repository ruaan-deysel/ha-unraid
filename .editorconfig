# top-most EditorConfig file
root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python - Ruff defaults (88 chars)
[*.py]
indent_size = 4
max_line_length = 88

# YAML - Home Assistant configs, GitHub workflows
[*.{yaml,yml}]
indent_size = 2

# JSON - manifest.json, translations, icons
[*.json]
indent_size = 2

# Markdown - READMEs, docs, agent instructions
[*.md]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# TOML - pyproject.toml
[*.toml]
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_size = 2
end_of_line = lf

# Scripts without extension (scripts/lint, scripts/test, etc.)
[scripts/*]
indent_size = 2
end_of_line = lf

# Makefiles require tabs
[Makefile]
indent_style = tab

# GitHub-specific files
[.github/workflows/*.{yml,yaml}]
indent_size = 2

[.github/dependabot.{yml,yaml}]
indent_size = 2
